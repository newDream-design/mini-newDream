.eva-header {
  height: 140rpx;
  background-color: #fff;
  padding: 0 30rpx;
}

.eva-avatar {
  height: 80rpx;
  width: 80rpx;
  flex-shrink: 0;
}

.eva-type-wrap{
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1px solid #eee;
}

.eva-type {
  flex-grow: 2;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-left: 40rpx;
}

.eva-type text{
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}
.eva-type text.active{
  background-color: var(--bgcolor);
  color: #fff;
}
.eva-textarea-wrap{
  background-color: #fff;
  padding: 30rpx;
}
.eva-textarea{
  width: 100%;
  height: 296rpx;
  resize: none;
  font-size: 28rpx;
  color: #555;
  border-bottom: 1px solid #eee;
}
.eva-image-wrap{
  padding: 0 30rpx;
  background-color: #fff;
}
.weui-uploader__title{
  font-size: 28rpx;
  color: #555;
}
.weui-uploader__info{
  font-size: 28rpx;
  font-weight: bold;
  color: #999;
}
.eva-sub{
  height: 80rpx;
  width: 310rpx;
  text-align: center;
  line-height: 80rpx;
  margin: 0 auto;
  color: #fff;
  font-size: 40rpx;
  background-color: var(--bgcolor);
  border-radius: 40rpx;
}
.eva-sub-wrap{
  background-color: #fff;
  padding: 40rpx 0;
}

.hide{
    display: none;
}