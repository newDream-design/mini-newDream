.refund-header {
  background-color: #fff;
  padding: 30rpx;
}

.refund-header view {
  font-size: 28rpx;
  font-weight: bold;
  color: #555;
}

.refund-header view text {
  font-weight: normal;
  color: #e94136;
  margin-left: 20rpx;
}

.refund-tit {
  font-size: 28rpx;
  font-weight: bold;
  color: #555;
  margin-bottom: 20rpx;
}

.refund-info {
  display: flex;
}

.goods-img {
  width: 180rpx;
  height: 180rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.refund-goods-info {
  display: flex;
  flex-wrap: wrap;
  flex-grow: 2;
}

.refund-goods-name {
  align-self: flex-start;
  width: 100%;
  display: -webkit-box !important;
  word-break: break-all;
  white-space: pre-wrap;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
  color: #555;
}

.refund-goods-spec {
  align-self: flex-end;
  display: block;
  width: 100%;
  font-size: 28rpx;
  color: #999;
}

.refund-main {
  background-color: #fff;
  padding: 30rpx;
}
.refund-details{
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.refund-details view{
  font-size: 28rpx;
  color: #999;
  font-weight: 300;
}
.refund-footer{
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  color: #fff;
  background-color: #e6154c;
  font-size: 40rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
}

.refund-goods-info2{
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  align-self: flex-end;
}


