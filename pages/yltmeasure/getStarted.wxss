Page {
    background-color: #fff;
}

.input-wrap {
    display: flex;
    flex-direction: row;
    margin: 0.5rem 0.5rem 0.5rem 0.5rem;
}

.input-wrap .title {
    min-width: 5.5rem;
    margin-left: 0.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
}

.input-wrap .title text {
    text-align: left;
    margin-left: 5px;
    font-size: 14px;
    color: var(--colorBlue);
}

.input-wrap .input {
    width: 13rem;
    border: 1px solid #ccc;
    padding: 7px 0px 7px 5px;
    border-radius: 10px;
    font-size: 14px;
}

.bodyShape-wrap {
    display: flex;
    flex-direction: column;
    margin: 1rem;
}

.bodyShape-wrap .title {
    font-size: 16px;
    margin-bottom: 1rem;
    font-weight: 700;
}

.bodyShape-wrap .image-wrap {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.bodyShape-wrap .image-wrap .block {
    width: 25%;
    display: flex;
    flex-direction: column;
    margin: 0 5% 0.5rem 3%;
}

.bodyShape-wrap .image-wrap .block .image {
    width: 5rem;
    height: 7rem;
    border: 2px solid white;
    margin-bottom: 0.25rem;
}

.bodyShape-wrap .image-wrap .block .icon {
	height:0;
    position: relative;
    left: 3.75rem;
    top: -7.25rem;
}

.bodyShape-wrap .image-wrap .block .image.selected {
    border-color: var(--colorGold) !important;
}

.bodyShape-wrap .image-wrap .block .key {
    font-size: 14px;
    color: var(--colorBlue);
}

.bodyShape-wrap .image-wrap .block .remark {
    font-size: 12px;
    color: #ccc;
}

.button-wrap {
    display: flex;
    flex-direction: row;
    margin: 1rem;
    justify-content: space-between;
}

.button-wrap .addMeasureData {
    width: 8rem;
    height: 3rem;
    margin:1rem auto;
    background: var(--colorBlue);
    display: flex;
    justify-content: center;
    align-items: center;
	border-radius: 5rem;
}

.button-wrap .addMeasureData.submit {
    background: var(--colorGold);
}

.button-wrap .addMeasureData text {
    font-size: 16px;
    text-align: center;
    color: #fff;
}
