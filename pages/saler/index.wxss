/*用户栏*/

.myBanner {
    position: relative;
    height: 7rem;
    overflow: hidden;
}

.colorBanner {
    background-color: var(--colorBlue);
}

.userInfo {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 1rem;
    display: flex;
    align-items: center;
}

.userAvatar {
    width: 4rem;
    height: 4rem;
    border-radius: 50%;
    margin-left: 0.5rem;
    display: flex;
    overflow: hidden;
}

.userName {
    display: flex;
    flex-direction: column;
}

.userName .text {
    color: #fff;
    font-size: 20px;
    margin-left: 1.5rem;
    font-weight: 700;
}

.userName text {
    color: #fff;
    font-size: 14px;
    margin-left: 1.5rem;
}

