/*数据条目*/

.container {
    background: #fff;
    display: flex;
    flex-direction: column;
    min-width: 17rem;
    border-radius: 5px;
    padding: 0.25rem;
    margin: 1rem;
}

.container .row {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-content: center;
}

.container .row view {
    display: flex;
    flex-direction: column;
    margin: 0.5rem 0.25rem;
    width: 25%;
}

.num {
    color: #000;
    font-size: 18px;
}

.des {
    color: #aaa;
    font-size: 13px;
    line-height: 1.8;
}

.title {
    color: #333;
    font-size: 16px;
    margin: 0 0.25rem;
}

.title-right {
    float: right;
    color: rgb(255, 128, 0);
    font-size: 18px;
    font-weight: 700;
}
