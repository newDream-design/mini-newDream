.classify-header input{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  display: inline-block;
}
.inline-search{
  position: relative;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  height:80rpx;
  background-color: #e3e3e3;
  border-radius: 40rpx;
}
.icon-classify-wrap{
  width: 84rpx;
  flex-shrink: 0;
}
.classify-header form{
  flex-grow: 2;
}

/* 排序 */
.sort-wrap{
  display: flex;
  justify-content: space-around;
  height: 90rpx;
  align-items: center;
  background-color: #fff;
}
.sort-type{
  flex-grow: 2;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #666;
}
.sort-arrow{
  display: inline-block;
}
.sort-arrow image{
  width: 14rpx;
  height: 14rpx;
  display: block;
}
/*商品列表*/
.goods{
  background-color: #fff;
  display: flex;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.goods-img{
  flex-shrink: 0;
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.goods-info{
  flex-grow: 2;
  display: flex;
  flex-wrap: wrap;
}
.goods-name{
  width: 100%;
  align-self: flex-start;
  display: -webkit-box !important;
  word-break: break-all;
  white-space: pre-wrap;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
  color: #333;
  margin-left: 0;
}
.goods-info-b{
  width: 100%;
  align-self: flex-end;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart-img{
  width: 45rpx;
  height: 40rpx;
}
.goods-price{
  font-size: 36rpx;
  color: var(--color);
  font-weight: bold;
}

.sort-type.active{
  color: var(--color);
}
.arrowUp{
  transform: rotate(180deg);
}


.hide{
    display: none;
}
.text-search{
  position: absolute;
  right: 0;
  top: 0;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  background-color: var(--bgcolor);
  color: #fff;
  font-size: 28rpx;
  border-radius:40rpx;
}
.goods-stock{
  /* margin-left: 20rpx; */
  color: #999;
  font-size: 24rpx;
}
.nogoods{
  margin-top: 160px;
}
.nogoods image{
  width: 240rpx;
  height: 320rpx;
  display: block;
  margin: 0 auto;
}
.nogoods text{
  margin-top: 40rpx;
  display: block;
  color: #555;
  font-size: 28rpx;
  text-align: center;
}

