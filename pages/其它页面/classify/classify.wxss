.classify-box{
    position:sticky;
    left:0;
    right:0;
    top:0;
    z-index:500;
    width: 100%;
    height: 240rpx;
    background: fff;
    display: flex;
    flex-direction: column;
}
.classify-content{
    /* padding-top: 240rpx; */
    /* box-sizing: border-box; */
}
.classify-header{
  padding: 30rpx;
  display: flex;
  align-items: center;
  height: 84rpx;
  background-color: #fff;
}
.icon-classify{
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin: 0 auto;
}
.text-classify{
  font-size: 28rpx;
  color: #999;
  display: block;
  text-align: center;
}
