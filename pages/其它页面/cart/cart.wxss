/*空购物车*/

.noGoods image {
  width: 255rpx;
  height: 205rpx;
  display: block;
  margin: 40rpx auto 0;
}

.goShopping {
  display: block;
  height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: var(--bgcolor);
  line-height: 80rpx;
  text-decoration: none;
  width: 160rpx;
  border-radius: 40rpx;
  text-align: center;
  margin: 40rpx auto;
}

.cart-goods-list {
  box-sizing: border-box;
  background-color: #fff;
  padding-bottom: 102rpx;
}

/*购物车底部*/

.cart-footer {
  border-top: 2rpx solid #dbdbdb;
  width: 100%;
  height: 100rpx;
  position: fixed;
  /* position: absolute; */
  z-index: 99;
  bottom: 0;
  display: flex;
}

.cart-footer-l {
  background-color: #fff;
  padding-left: 30rpx;
  padding-right: 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-grow: 2;
}

.cart-footer-r {
  height: 100rpx;
  width: 240rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  background-color: var(--bgcolor);
  flex-shrink: 0;
}

.fare {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

.total-wrap {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.total-wrap text {
  color: #555;
  font-size: 28rpx;
  font-weight: normal;
}

/*商品列表*/

.cart-goods {
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.goods-info {
  flex-grow: 2;
  display: flex;
}

.goods-img {
  margin-left: 10rpx;
  margin-right: 20rpx;
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
}

.goods-info1 {
  flex-grow: 2;
  display: flex;
  flex-wrap: wrap;
}

.goods-name {
  align-self: flex-start;
  width: 100%;
  display: -webkit-box !important;
  word-break: break-all;
  white-space: pre-wrap;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
}

.goods-info2 {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  width: 100%;
  flex-shrink: 0;
  align-self: flex-end;
}

.amount-wrap {
  border: 1px solid #ccc;
  display: flex;
}

.amount-wrap text {
  width: 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  display: inline-block;
}

.amount-wrap input {
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 32rpx;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

.amount-wrap .normal {
  color: #000;
}

.amount-wrap .disabled {
  color: #ccc;
}

.icon-allChoose {
  display: flex;
  align-items: center;
}

.text-allChoose {
  margin-left: 20rpx;
  font-size: 32rpx;
}

.del-cart image {
  width: 34rpx;
  height: 34rpx;
}


.del-cart .iconfont{
  font-size: 40rpx;
  color: var(--color);
}


.icon-choose,.icon-xuanze2{
  font-size: 40rpx;
  color: var(--color);
}