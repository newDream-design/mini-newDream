.classify-box {
    position: sticky;
    left: 0;
    right: 0;
    top: 0;
    z-index: 500;
    width: 100%;
    height: 240rpx;
    background: fff;
    display: flex;
    flex-direction: column;
}

.classify-header {
    padding: 0.25rem;
    display: flex;
    align-items: center;
    height: 3rem;
    background-color: #fff;
}

.classify-arrow {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 10%;
    height: 2.5rem;
    background-color: #fff;
}

.classify-scroll {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
    justify-content: space-around;
    width: 90%;
    height: 2.5rem;
    background-color: #fff;
}

.classify-scroll .scroll-tab-list {
    display: inline-block;
    min-width: 3rem;
    padding: 0 10rpx;
    text-align: center;
    line-height: 90rpx;
    border-bottom: 2px solid transparent;
}

.classify-scroll .scroll-tab-list.on {
    font-weight: 700;
    color: var(--tabColorA);
    border-bottom: 2px solid var(--tabColorB);
}

.category-block {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
}

.category-block .category {
    width: 4.25rem;
    margin: 0 0 0.5rem 0.5rem;
    text-align: center;
    font-size: 14px;
    line-height: 36px;
    color: #555;
    border: 1px solid #bbb;
}

.category-block .category.on {
    font-weight: 700;
    color: var(--tabColorA);
    border: 1px solid var(--tabColorB);
}

.allCategory {
    color: var(--tabColorA);
    margin-left: 10px;
}

.icon-classify {
    width: 30rpx;
    height: 30rpx;
    display: block;
    margin: 0 auto;
}

.text-classify {
    font-size: 28rpx;
    color: #999;
    display: block;
    text-align: center;
}

