.classify-header input {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    display: inline-block;
}

.inline-search {
    position: relative;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    height: 80rpx;
    background-color: #e3e3e3;
    border-radius: 40rpx;
}

.classify-header form {
    flex-grow: 2;
}

/* 排序 */

.sort-wrap {
    display: flex;
    justify-content: space-around;
    height: 90rpx;
    align-items: center;
    background-color: #fff;
}

.sort-type {
    flex-grow: 2;
    text-align: center;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 28rpx;
    color: #666;
}

.sort-arrow {
    display: inline-block;
}

.sort-arrow image {
    width: 7px;
    height: 10px;
    display: block;
}

/*商品列表*/

.goods-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.goods {
    width: 42%;
    padding: 3.5%;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-bottom: 20rpx;
}

.goods-img {
    flex-shrink: 0;
    width: 100%;
    min-height: 12rem;
    height: auto;
}

.goods-info {
    flex-grow: 2;
    display: flex;
    flex-wrap: wrap;
}

.goods-name {
    width: 100%;
    align-self: flex-start;
    display: -webkit-box !important;
    word-break: break-all;
    white-space: pre-wrap;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-size: 28rpx;
    color: #333;
    margin-left: 0;
}

.goods-info-b {
    width: 100%;
    align-self: flex-end;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.cart-img {
    width: 45rpx;
    height: 40rpx;
}

.goods-desb {
    /* margin-left: 20rpx; */
    color: var(--tabColorB);
    font-size: 24rpx;
}

.goods-price {
    font-size: 30rpx;
    color: #555;
    font-weight: bold;
}

.sort-type.active {
    color: var(--color);
}

.arrowUp {
    transform: rotate(180deg);
}

.hide {
    display: none;
}

.text-search {
    position: absolute;
    right: 0;
    top: 0;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 30rpx;
    background-color: var(--bgcolor);
    color: #fff;
    font-size: 28rpx;
    border-radius: 40rpx;
}

.nogoods {
    margin-top: 160px;
}

.nogoods image {
    width: 240rpx;
    height: 320rpx;
    display: block;
    margin: 0 auto;
}

.nogoods text {
    margin-top: 40rpx;
    display: block;
    color: #555;
    font-size: 28rpx;
    text-align: center;
}

.icon-gouwuche1 {
    color: var(--color);
    font-size: 34rpx;
}

.mask {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 990;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
}

.categorySelecter-warp {
    position: fixed;
    width: 100%;
    min-height: 8rem;
    top: 0;
    background: #fff;
    z-index: 998;
}
